<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true %>
    <%= f.input :description %>
    <%= f.input :address %>
    <%= f.input :gluten %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
